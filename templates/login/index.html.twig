{% extends 'base.html.twig' %}
{% block head %}
	{{ parent() }}
	{% block stylesheets %}
		{{ parent() }}
		{{ encore_entry_link_tags('app_login') }}

	{% endblock %}
	{% block javascripts %}
		{{ parent() }}
		{{ encore_entry_script_tags('app_login') }}

	{% endblock %}
{% endblock %}
{% block title %}Login
{% endblock %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<div class="container-login">
		<div class="card-login">
			<form class="ul" action="{{ path('app_login') }}" method="post" autocomplete="off" >
				<label for="username"></label>
				<input placeholder="E-mail" class="input" type="text" id="username" name="_username" value="{{ last_username }}">

				<label for="password"></label>
				<input
				type="password" id="password" name="_password" class="input" placeholder="Mots de passe">

				{# If you want to control the URL the user is redirected to on success
				        <input type="hidden" name="_target_path" value="/account"> #}
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button class="btn-neon"type="submit"><span>Se connecter</span></button>
							<p>Vous n'êtes pas inscrit ? 
				<a href="{{ path('app_register') }}">Créez votre compte.</a>
			</p>
			</form>
		</div>
	</div>
{% endblock %} 
