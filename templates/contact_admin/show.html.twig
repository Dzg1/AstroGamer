{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
    {% block stylesheets %}
        {{ parent() }}
        {{ encore_entry_link_tags('app_contact_admin_show') }}
    {% endblock %}

    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('app_contact_admin_show') }}
    {% endblock %}
{% endblock %}
{% block title %}ContactAdmin
{% endblock %}

{% block body %}
	<h1>{{ mails_by_user[0].username }}</h1>


<div id="copied"><span>Copié 👍🏾</span></div>
		<p class=" container-adress" id="container-mail"><span id="email">{{ mails_by_user[0].email }}</span><span id="click-to-copy">✂️</span> </p> 

		<div class="container-mail" id="container-mail>
	{% for mail in mails_by_user %}
	<p class="send-at">Le {{ mail.sendAt|date('d/m/Y à H:i') }}</p>
			<p class="mail-bubble">
				{{ mail.content }}
			</p>

	{% endfor %}
		</div>


	<a class="back" href="{{ path('app_contact_admin') }}">🔙</a>

	{{ include('contact_admin/_delete_form.html.twig') }}
{% endblock %}
 